<%= form_tag new_booking_path, method: 'get' do %>

  <table class="table">
  <thead>
    <tr>
      <th>Select</th>
      <th>Flight #</th>
      <th>Date</th>
      <th>Departs</th>
      <th>From</th>
      <th>To</th>
      <th>Duration</th>
    </tr>
  </thead>

    <% @flights.each do |flight| %>
      <tbody>
        <tr>
          <td><%= radio_button_tag :flight_id, flight.id %></td>
          <td><%= flight.id %></td>
          <td><%= flight.start_time.strftime("%B %d, %Y")  %></td>
          <td><%= flight.start_time.strftime('%I:%M:%S %p') %></td>
          <td><%= flight.from_airport.code %></td>
          <td><%= flight.to_airport.code %></td>
          <td><%= distance_of_time_in_words(flight.duration) %></td>
        </tr>      
      </tbody>
    <% end %>
    </table>
    <%= submit_tag "Select Flight", :name => nil, class: "button" %>
    <%= hidden_field_tag :passengers, params[:passengers] %>

<% end %>